<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.ProjectHallApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ProjectHallApplication" parent="Base.Theme.ProjectHallApplication" />


    <style name="CustomEditTextLayout" parent="ThemeOverlay.Material3.TextInputEditText.FilledBox">
        <item name="android:textColorHint">@color/black</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="hintTextColor">@color/black</item>


    </style>

    <style name="CustomEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:drawableStart">@color/black</item>
    </style>

    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="backgroundTint">@color/black</item>
    </style>

</resources>